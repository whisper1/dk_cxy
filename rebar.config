{deps, []}.
{lib_dirs, []}.
{require_otp_vsn, "R?1[4567]"}.
{cover_enabled, true}.
{cover_print_enabled, true}.
{cover_export_enabled, true}.
{erl_opts, [
            {src_dirs, ["src","test"]},
            warn_unused_vars,
            warn_export_all,
            warn_shadow_vars,
            warn_unused_import,
            warn_unused_function,
            warn_bif_clash,
            warn_unused_record,
            warn_deprecated_function,
            warn_obsolete_guard,
            strict_validation,
            warn_export_vars,
            warn_exported_vars,
            warn_missing_spec,
            warn_untyped_record,
            debug_info
          ]}.
{dialyzer_opts, [{warnings, [
            unmatched_returns,
            error_handling,
            race_conditions,
            behaviours]}
          ]}.
{edoc_opts, [
            {report_missing_types, true},
            {source_path, ["src"]},
            {report_missing_types, true},
            {todo, true},
            {packages, false},
            {subpackages, false}
          ]}.
{xref_checks, [
            undefined_function_calls,
            undefined_functions,
            locals_not_used,
            deprecated_function_calls,
            deprecated_functions
          ]}.
{xref_warnings, true}.
{ct_extra_params,""}.


